pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from SCM and poll for changes
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'PollSCM', ignorePostCommitHooks: true, polling: true]], userRemoteConfigs: [[credentialsId: 'your-git-credentials-id', url: 'https://github.com/SufiyanStark/final_task_app.git']]])
            }
        }

        stage('Build') {
            steps {
                // Your build steps here
            }
        }

        stage('Notify Slack') {
            steps {
                script {
                    slackSend (
                        color: '#36a64f', // Customize the color
                        message: "Build Status: ${currentBuild.currentResult}", // Include build status
                        channel: '#general', // Specify the Slack channel
                        tokenCredentialId: 'slack-id' // Use your Slack credential ID
                    )
                }
            }
        }
    }
}
