pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Your build steps here
            }
        }

        stage('Notify Slack') {
            steps {
                script {
                    slackSend (
                        color: currentBuild.currentResult == 'SUCCESS' ? 'good' : 'danger',
                        message: currentBuild.currentResult == 'SUCCESS' ? 'Build Successful' : 'Build Failed',
                        channel: '#general', // Specify the Slack channel where you want to send the notification
                        tokenCredentialId: 'slackidhere' // Use your Slack credential ID
                    )
                }
            }
        }
    }
}
