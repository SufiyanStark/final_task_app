pipeline {
    agent any

    options {
        // Poll the SCM for changes every 5 minutes
        buildDiscarder(logRotator(artifactNumToKeepStr: '5', numToKeepStr: '5'))
        timestamps()
        pollSCM('* * * * *')
    }

    stages {
        stage('Build') {
            steps {
                // Your build steps here
            }
        }

        stage('Notify Slack') {
            steps {
                script {
                    slackSend (
                        color: '#36a64f', // Customize the color
                        message: "Build Status: ${currentBuild.currentResult}", // Include build status
                        channel: '#general', // Specify the Slack channel
                        tokenCredentialId: 'slack-id' // Use your Slack credential ID
                    )
                }
            }
        }
    }
}
